[Unit]
Description=Ticketing SDT Backend API
After=network.target

[Service]
Type=simple
User=ai
Group=ai
WorkingDirectory=/home/ai/TicketingSDT
Environment="PATH=/home/ai/TicketingSDT/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/home/ai/TicketingSDT/venv/bin/uvicorn src.api.web_api:app --host 0.0.0.0 --port 8003
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
