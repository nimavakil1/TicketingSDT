server {
    server_name ai.distri-smart.com;

    # Allow up to 100MB file uploads
    client_max_body_size 100M;

    # Frontend - Proxy to Vite dev server (development) or serve from dist (production)
    location / {
        # For development: proxy to Vite dev server on port 3002
        # proxy_pass http://localhost:3002;
        # proxy_set_header Host $host;
        # proxy_set_header X-Real-IP $remote_addr;
        # proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        # proxy_set_header X-Forwarded-Proto $scheme;

        # For production: serve built frontend from dist folder
        root /home/ai/TicketingSDT/frontend/dist;
        try_files $uri $uri/ /index.html;
    }

    # Backend API - Proxy to FastAPI on port 8003
    location /api/ {
        proxy_pass http://localhost:8003;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # WebSocket support
    location /ws/ {
        proxy_pass http://localhost:8003;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
    }

    # Health check and docs
    location ~ ^/(health|docs|openapi\.json|redoc) {
        proxy_pass http://localhost:8003;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/ai.distri-smart.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/ai.distri-smart.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = ai.distri-smart.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot

    listen 80;
    server_name ai.distri-smart.com;
    return 404; # managed by Certbot
}
